{% extends 'base.html.twig' %}

{% block body %}
    <h1>Weapon</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weapon.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ weapon.type }}</td>
            </tr>
            <tr>
                <th>Damage</th>
                <td>{{ weapon.damage }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('weapon_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('weapon_edit', { 'id': weapon.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
